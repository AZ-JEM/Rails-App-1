$(document).on('turbolinks:load', function() {

  // determine precisely where we are at the moment...
  getControllerAction();
  // jemSpy('load');

  // enable tooltips :
  $('[toggle="tooltip"]').tooltip();

  // alerts and notices
  var delay_ms = 5000;
  var fade_ms = 500;
  // fade out alerts or notices...
  $('.notice').delay(delay_ms).fadeOut(fade_ms);
  $('.alert').delay(delay_ms).fadeOut(fade_ms);
  // fade in branding...
  $('#azjem').delay(delay_ms + fade_ms).fadeIn(fade_ms);

  // Exercise 5.8
  // Ruby embedded in Javascript!!!
  // why can't I retrieve controller_name and action_name directly like this ?
  if ((current_Controller == 'products') && (current_Action == 'show')) {
    $('.rating').raty({
      starHalf: '<%= asset_path "star-half.png" %>',
      starOff: '<%= asset_path "star-off.png" %>',
      starOn: '<%= asset_path "star-on.png" %>',
      scoreName: 'comment[rating]'
    });

    $('.rated').raty({
      starHalf: '<%= asset_path "star-half.png" %>',
      starOff: '<%= asset_path "star-off.png" %>',
      starOn: '<%= asset_path "star-on.png" %>',
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      }
    });
  }

});

