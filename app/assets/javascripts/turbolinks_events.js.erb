$(document).on('turbolinks:load', function() {

  // Retrieve controller and action from layout...
  var current_Controller = $('body').data('controller');
  var current_Action = $('body').data('action');
  //console.log(current_Controller, current_Action);
  // $('title').text(current_Controller + ':' + current_Action);

  // General tinkering...
  // $('#azjem').text(current_Controller + ' : ' + current_Action);
  // var client_Width = $('body').prop('clientWidth');
  // var client_Height = $('body').prop('clientHeight');
  // $('#azjem').text(client_Width + ' : ' + client_Height);

  // enable tooltips :
  $('[toggle="tooltip"]').tooltip();

  // alerts and notices
  var delay_ms = 5000;
  var fade_ms = 500;
  $('.notice').delay(delay_ms).fadeOut(fade_ms);
  $('.alert').delay(delay_ms).fadeOut(fade_ms);

  // Exercise 5.8
  // Ruby embedded in Javascript!!!
  // ...ozone is emanating from my ears...
  // (it even has it's own file icon)
  if ((current_Controller == 'products') && (current_Action == 'show')) {
    $('.rating').raty({
      starHalf: '<%= asset_path "star-half.png" %>',
      starOff: '<%= asset_path "star-off.png" %>',
      starOn: '<%= asset_path "star-on.png" %>',
      scoreName: 'comment[rating]'
    });

    $('.rated').raty({
      starHalf: '<%= asset_path "star-half.png" %>',
      starOff: '<%= asset_path "star-off.png" %>',
      starOn: '<%= asset_path "star-on.png" %>',
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      }
    });
  }

});
