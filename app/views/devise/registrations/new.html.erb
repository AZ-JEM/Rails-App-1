<h2>Sign up</h2>

<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <div class="row">
    <!-- labels -->
    <div class="col col-md-3 text-right">
      <%= f.label :email %><br>
      <%= f.label :first_name %><br>
      <%= f.label :last_name %><br>
      <%= f.label :password %><br>
      <%= f.label :password_confirmation %><br>
    </div>
    <!-- fields   -->
    <div class="col col-md-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %><br>
      <%= f.text_field :first_name, class: "form-control" %><br>
      <%= f.text_field :last_name, class: "form-control" %><br>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "6 characters minimum..." %><br>
      <!-- <% if @minimum_password_length %>
        (<%= @minimum_password_length %> characters minimum)
      <% end %> -->
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %><br>
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  </div>


<% end %>

<hr>

<%= render "devise/shared/links" %>
