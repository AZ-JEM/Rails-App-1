<div class="comment_form" style="margin: 1rem; border: 1px solid white; padding: 1rem;">

<% if signed_in? %>

  <h3><em>Add a review:</em></h3>

  <%= form_for([@product, @product.comments.build]) do |f| %>

    <div class="row">
      <div class="col-sm-12">

        <div>
          <%= f.label :body, "Comments" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <br>

        <div>
          <%= f.label :rating %>
          <span class="rating"></span>
        </div>
        <br>

      </div>
    </div>

    <%= f.submit "Submit review", class: "btn btn-primary" %>

  <% end %>

<% end %>

</div>
