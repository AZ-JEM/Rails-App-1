<div id="notice"><%= notice %></div>

<h3>Show Product</h3>
<hr>

<div>
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag(@product.image_url, class: "img-responsive center-block") %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(@product.price) %>
  </p>
</div>

<hr>
  <!-- Exercise 5.7 -->
  <p>
    <% if @product.average_rating %>
      <strong>Average rating:</strong>
      <%= number_to_human(@product.average_rating) %>
    <% else %>
      <strong>No user ratings yet...</strong>
    <% end %>
  </p>

<hr>

<%= link_to 'Edit', edit_product_path(@product), class:"btn btn-md btn-success" %> |
<%= link_to 'Products', products_path, class:"btn btn-md btn-default" %>
