<h3><%= @product.name %></h3>

<hr>

<!-- <div class="row" style="margin: 1rem;"> -->
<div class="row" style="border: 1px solid white; background: #aaa; margin: 1rem; padding: 1rem 0;">

  <!-- product image -->
  <div class="col col-sm-3">
    <%= image_tag(@product.image_url, class: "img-responsive") %>
  </div>

  <!-- product data -->
  <div class="col col-sm-9">

    <p>
      <%= @product.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= number_to_currency(@product.price) %>
    </p>

    <p>
      <span class="rated" data-score="<%= @product.average_rating %>"></span>
    </p>

    <p>
      <% if @product.average_rating %>
        <em>Average rating:</em>
        <%= number_to_human(@product.average_rating) %>
      <% else %>
        <em>No user ratings yet...</em>
      <% end %>
    </p>

    <% if current_user %>
      <%= link_to 'Edit product...', edit_product_path(@product), class:"btn btn-md btn-success" %>
    <% end %>

  </div>

</div>

