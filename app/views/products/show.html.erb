<h3><%= @product.name %></h3>

<hr>

<div class="row product-row">

  <!-- product image -->
  <div class="col col-sm-3">
    <%= image_tag(@product.image_url, class: "img-responsive") %>
  </div>

  <!-- product data -->
  <div class="col col-sm-9">

    <p>
      <%= @product.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= number_to_currency(@product.price) %>
    </p>

    <p>
      <span class="rated" data-score="<%= @product.average_rating %>"></span>
    </p>

    <p>
      <% if @product.average_rating %>
        <em>Average rating:</em>
        <%= number_to_human(@product.average_rating) %>
      <% else %>
        <em>No user ratings yet...</em>
      <% end %>
    </p>

    <!-- Exercise 6.5 -->
    <% if current_user %>
      <%= form_with(url: '/payments/create') do |form| %>
        <%= hidden_field_tag(:product_id, @product.id) %>
        <%= render partial: "partials/stripe_checkout_button" %>
      <% end %>
    <% end %>

    <% if signed_in? && current_user.admin? %>
      <%= link_to 'Edit product...', edit_product_path(@product), class:"btn btn-md btn-default" %>
    <% end %>

  </div>

</div>

