<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <p class="navbar-brand"><strong><em>Polar Clock Shop</em></strong></p>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <!-- search form -->
      <%= form_with(url: products_path, method: "get", local: true, class: "navbar-form navbar-left") do |form| %>
        <div class="field form-group">
          <%= form.text_field :q, id: "q", value: params[:q], class: "form-control", "placeholder": "Search products..." %>
        </div>
        <div class="actions form-group">
          <%= form.submit "Submit", class: "btn btn-default" %>
        </div>
      <% end %>
      <!-- </form> -->

      <!-- navigation anchors -->
      <ul class="nav navbar-nav navbar-right">
        <!-- home -->
        <li class="<%= 'active' if current_page?(home_path) %>">
          <%= link_to home_path, title:"Landing page", toggle:"tooltip", "data-placement":"bottom" do %>
            <i class="fas fa-home"></i> Home
          <% end %>
        </li>
        <!-- products -->
        <li class="<%= 'active' if current_page?(products_path) %>">
          <%= link_to products_path, title:"List all products...", toggle:"tooltip", "data-placement":"bottom" do %>
            <i class="fas fa-cubes"></i> Products
          <% end %>
        </li>
        <!-- orders -->
        <li class="<%= 'active' if current_page?(orders_path) %>">
          <%= link_to orders_path,
            title:"Show orders...",  toggle:"tooltip", "data-placement":"bottom" do %>
            <i class="fas fa-shopping-cart"></i> Orders
          <% end %>
        </li>
        <!-- demo -->
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to root_path, title:"Running demonstration...", toggle:"tooltip", "data-placement":"bottom" do %>
            <i class="fas fa-clock"></i> Demo
          <% end %>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
