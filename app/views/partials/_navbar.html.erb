<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <p class="navbar-brand"><strong><em>Polar Clock Shop</em></strong></p>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <!-- search form -->
      <%= form_with(url: products_path, method: "get", local: true, class: "navbar-form navbar-left") do |form| %>
        <div class="field form-group">
          <%= form.text_field :q, id: "q", value: params[:q], class: "form-control", "placeholder": "Search products..." %>
        </div>
        <div class="actions form-group">
          <%= form.submit "Go", class: "btn btn-default" %>
        </div>
      <% end %>
      <!-- </form> -->

      <!-- navigation anchors -->
      <ul class="nav navbar-nav navbar-right">
        <!-- home -->
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to root_path, title:"Landing page", toggle:"tooltip", "data-placement":"bottom" do %>
            <i class="fas fa-home"></i> Home
          <% end %>
        </li>
        <!-- products -->
        <li class="<%= 'active' if current_page?(products_path) %>">
          <%= link_to products_path, title:"List all products...", toggle:"tooltip", "data-placement":"bottom" do %>
            <i class="fas fa-cubes"></i> Products
          <% end %>
        </li>
        <!-- orders -->
        <li class="<%= 'active' if current_page?(orders_path) %>">
          <%= link_to orders_path,
            title:"Show orders...", toggle:"tooltip", "data-placement":"bottom" do %>
            <i class="fas fa-shopping-cart"></i> Orders
          <% end %>
        </li>
        <!-- demo -->
        <li class="<%= 'active' if current_page?(demo_path) %>">
          <%= link_to demo_path, title:"Running demonstration...", toggle:"tooltip", "data-placement":"bottom" do %>
            <i class="fas fa-clock"></i> Demo
          <% end %>
        </li>
        <!-- Authentication -->
        <% if current_user %>
          <!-- MANAGE USER INFO -->
          <li class="<%= 'active' if current_page?(edit_user_registration_path) %>">
            <%= link_to edit_user_registration_path, method: :get, title:"Edit your info...", toggle:"tooltip", "data-placement":"bottom" do %>
              <i class="fas fa-edit"></i> Account
            <% end %>
          </li>
          <!-- SIGN OUT -->
          <li>
            <%= link_to destroy_user_session_path, method: :delete, title:"End session", toggle:"tooltip", "data-placement":"bottom" do %>
              <i class="fas fa-unlock"></i> Sign Out
            <% end %>
          </li>
        <% else %>
        <!-- SIGN IN or SIGN UP -->
        <li class="<%= 'active' if current_page?(new_user_session_path) %>">
          <%= link_to new_user_session_path, method: :get, title:"Sign-in OR Sign-up", toggle:"tooltip", "data-placement":"bottom" do %>
            <i class="fas fa-lock"></i> Sign In
          <% end %>
        </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
